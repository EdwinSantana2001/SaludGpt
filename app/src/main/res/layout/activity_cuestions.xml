<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Cuestions" android:background="@color/backgroud">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_margin="15dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="152dp" android:id="@+id/lbl_cuestion"
                android:gravity="center_horizontal|center_vertical" android:textSize="24sp"
                android:textColor="@color/black" android:fontFamily="@font/b612_mono" android:textStyle="bold"
        />
        <Space
                android:layout_width="match_parent"
                android:layout_height="39dp"/>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="417dp">
            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/rbt_cuestion1"
                    android:textSize="19sp" android:fontFamily="@font/b612_mono" android:textStyle="bold"/>
            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/rbt_cuestion2" android:textSize="19sp"
                    android:fontFamily="@font/b612_mono" android:textStyle="bold"/>
            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/rbt_cuestion3" android:textSize="19sp"
                    android:fontFamily="@font/b612_mono" android:textStyle="bold"/>
            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/rbt_cuestion4" android:textSize="19sp"
                    android:fontFamily="@font/b612_mono" android:textStyle="bold"/>
            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/rbt_cuestion5" android:textSize="19sp"
                    android:fontFamily="@font/b612_mono" android:textStyle="bold"/>
            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/rbt_cuestion6" android:textSize="19sp"
                    android:fontFamily="@font/b612_mono" android:textStyle="bold"/>
        </RadioGroup>
        <Button
                android:text="@string/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="88dp" android:id="@+id/btn_next" android:fontFamily="@font/b612_mono"
                android:textStyle="bold" android:textSize="15dp" android:textColor="@color/white"
                android:background="@color/black"/>
    </LinearLayout>
</RelativeLayout>